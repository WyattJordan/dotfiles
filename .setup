#!/bin/bash

echo "Installing emacs and tmux................................."
sudo apt-get update && sudo apt-get install emacs tmux -y

echo "Cleaning up home directory................................"
nautilus -q # make the XDG folders track in ~/Standard
sudo mkdir ~/Standard
sudo mv ~/Desktop ~/Standard
sudo mv ~/Documents ~/Standard
sudo mv ~/Downloads ~/Standard
sudo mv ~/Music ~/Standard
sudo mv ~/Pictures ~/Standard
sudo mv ~/Public ~/Standard
sudo mv ~/Templates ~/Standard
sudo mv ~/Videos ~/Standard

